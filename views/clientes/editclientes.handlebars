    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Editar Cliente:</h3>
<div class="card">
    <div class="card-body">
        <form action="/clientes/edit" method="POST">
            <input type="hidden" name="id" value="{{cliente._id}}">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" placeholder="Nome do cliente" class="form-control" value="{{cliente.nome}}">
            <label for="telefone">Telefone: </label>
            <input type="tel" name="telefone" id="telefone" placeholder="Telefone do cliente" pattern="[0-9]{2}[0-9]{9}" title="Número de telefone precisa ser no formato 99999999999" class="form-control" value="{{cliente.telefone}}">
            <label for="rua">Rua: </label>
            <input type="text" name="rua" id="rua" placeholder="Rua do cliente" class="form-control" value="{{cliente.rua}}">
            <label for="numero">Número: </label>
            <input type="number" name="numero" id="numero" placeholder="Número da casa" class="form-control" value="{{cliente.numero}}">
            <label for="bairro">Bairro: </label>
            <input type="bairro" name="bairro" id="bairro" placeholder="Bairro do cliente" class="form-control" value="{{cliente.bairro}}">
            <label for="cidade">Cidade: </label>
            <input type="text" name="cidade" id="cidade" placeholder="Cidade do cliente" class="form-control" value="{{cliente.cidade}}">
            <label for="complemento">Complemento: </label>
            <textarea name="complemento" placeholder="Casa-Apartamento-Nos fundos" class="form-control">{{cliente.complemento}}</textarea>
            <button type="submit" class="btn btn-outline-primary mt-3">Editar</button>
        </form>
    </div>
</div>