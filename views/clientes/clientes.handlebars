<h2>Lista de clientes:</h2>
<hr>
<a href="/clientes/add"><button class="btn btn-success">Novo cliente</button></a>

{{#each clientes}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Nome: {{nome}}</h4>
            <p>Telefone: {{telefone}}</p>
            <p>Rua: {{rua}}</p>
            <p>Número: {{numero}}</p>
            <p>Bairro: {{bairro}}</p>
            <p>Cidade: {{cidade}}</p>
            <p>Complemento: {{complemento}}</p>
            <small>Data de criação: {{date}}</small>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="/clientes/edit/{{_id}}"><button class="btn btn-primary btn-sm">Editar</button></a>
                <form action="/clientes/deletar" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
                </form>
            </div>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhum cliente registrado</h4>
{{/each}}