<h2>Lista de produtos:</h2>
<hr>
<a href="/produtos/add"><button class="btn btn-success">Novo produto</button></a>

{{#each produtos}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Nome: {{nome}}</h4>
            <p>Pre√ßo: {{preco}}</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="/produtos/edit/{{_id}}"><button class="btn btn-primary btn-sm">Editar</button></a>
                <form action="/produtos/deletar" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
                </form>
            </div>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhum produto registrado</h4>
{{/each}}