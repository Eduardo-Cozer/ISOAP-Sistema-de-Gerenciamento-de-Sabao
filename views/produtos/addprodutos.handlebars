{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Cadastrar produto:</h3>
<div class="card">
    <div class="card-body">
        <form action="/produtos/novo" method="POST">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" placeholder="Nome do produto" class="form-control">
            <label for="quantidade">Quantidade: </label>
            <input type="number" name="quantidade" id="quantidade" placeholder="Quantidade do produto" class="form-control">
            <label for="preco">Preço: </label>
            <div class="input-group mb-3">
                <span class="input-group-text">R$</span>
                <input type="number" name="preco" id="preco" placeholder="Preço do produto" class="form-control">
            </div>
            <button type="submit" class="btn btn-success mt-3">Cadastrar</button>
        </form>
    </div>
</div>